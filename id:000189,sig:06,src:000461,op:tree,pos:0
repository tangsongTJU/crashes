function Inner() {
    this.i = 0;
    this.doStuff = foo
}

var foo = function() {
    var inner = new Inner();
    var done = false;
    done = true.isDone = function() {
        done = true;
    }

    while (true) {
        var val = inner.doStuff();
        if (done)
            break;
    }
}

foo();
