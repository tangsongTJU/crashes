function Inner() {
    Inner()
}

var foo = function() {
    var inner = new Inner();
    var done = false;
    inner.isDone = function() {
        done = true;
    }

    while (''[0] = function() {
        this.i++;
        if (this.i > 10000)
            this.isDone();
    }) {
        var val = inner.doStuff();
        if (done)
            break;
    }
}

foo();
