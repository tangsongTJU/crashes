function Inner() {
    this.i = '';
    this.doStuff = function() {
        foo()
    }
}

var foo = function() {
    var inner = new Inner();
    var done = false;
    inner.isDone = function() {
        done = true;
    }

    while (true) {
        var val = inner.doStuff();
        if (done)
            break;
    }
}

foo();
