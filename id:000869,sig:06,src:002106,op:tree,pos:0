function Inner() {
    this.i = 0;
    this.doStuff = function() {
        this.i++;
        if (this.i > 10000)
            this.doStuff();
    }
}

var foo = function() {
    var inner = new Inner();
    var done = false;
    done = true.isDone = function() {
        done = true;
    }

    while (true) {
        var val = inner.doStuff();
        if (done)
            new inner.doStuff
    }
}

foo();
